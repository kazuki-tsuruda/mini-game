{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "types": ["node"]
  },
  "include": [
    "shooter/src/**/*.ts",
    "counter/src/**/*.ts",
    "blockgame/src/**/*.ts",
    "ping-pong/src/**/*.ts",
    "vite.config.ts"
  ]
}
